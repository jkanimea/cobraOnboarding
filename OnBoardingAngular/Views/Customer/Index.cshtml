
@{
    ViewBag.Title = "Index";
}

<div ng-app="onboard">
    <h4>Customer Page</h4>


    <div ng-controller="customer">
        <button type="button" class="btn btn-primary" ng-click="addCustomer()">Add</button>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Address1</th>
                    <th>Address2</th>
                    <th>Town_City</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in customerInfo">
                    <th scope="row">{{item.Id}}</th>
                    <td>{{item.Name}}</td>
                    <td>{{item.Address1}}</td>
                    <td>{{item.Address2}}</td>
                    <td>{{item.Town_City}}</td>
                    <td>
                        <button type="button" class="btn btn-info" ng-click="editCustomer(item)">Edit</button>
                        <div class="divider" />
                        <button type="button" class="btn btn-danger" ng-click="deleteCustomer(item)">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>



        <script type="text/ng-template" id="myModalContent">
            <div class="modal-header">
                <h3 class="modal-title" id="modal-title">{{Title}}</h3>
            </div>
            <div class="modal-body" id="modal-body">
                <form>
                    <div class="form-group">
                        <label for="id">Id</label>
                        <input type="text" class="form-control" id="id" ng-model="Id" disabled>
                    </div>
                    <div class="form-group">
                        <label for="names">Name</label>
                        <input type="text" class="form-control" id="names" ng-model="Names">
                    </div>
                    <div class="form-group">
                        <label for="address1">Address1</label>
                        <input type="text" class="form-control" id="address1" ng-model="Address1">
                    </div>
                    <div class="form-group">
                        <label for="address2">Address2</label>
                        <input type="text" class="form-control" id="address2" ng-model="Address2">
                    </div>
                    <div class="form-group">
                        <label for="town_city">Town or City</label>
                        <input type="text" class="form-control" id="town_city" ng-model="Town_City">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="button" ng-click="ok()">OK</button>
                <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
            </div>
        </script>

    </div>
</div>


<style>
    .divider {
        width: 5px;
        height: auto;
        display: inline-block;
    }
</style>